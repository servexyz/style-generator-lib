{
  "name": "@servexyz/npm-starter",
  "version": "1.0.0",
  "description": "Barebones NodeJS starter package for publishing ES6 to npmjs.com",
  "main": "./dist/index.js",
  "repository": {
    "url": "https://github.com/servexyz/open-source",
    "type": "git"
  },
  "scripts": {
    "test": "nyc ava --verbose",
    "test:watch": "nyc ava --watch",
    "build": "babel src --presets babel-preset-es2015 --out-dir dist",
    "prepublish": "npm run build"
  },
  "author": "Alec HP",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "nyc": "^10.1.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "files": [
      "./src/test.js"
    ],
    "failFast": false,
    "tap": false,
    "babel": "inherit"
  }
}
